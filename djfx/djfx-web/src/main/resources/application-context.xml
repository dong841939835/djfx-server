	<import resource="classpath:application-context-service.xml"></import>
	<import resource="classpath*:errorpage.xml" />

	<pirates:component-scan base-package="com.qcloud.project.djfx.web.login"></pirates:component-scan>	
	<pirates:component-scan base-package="com.qcloud.project.djfx.web.controller"></pirates:component-scan>
	<pirates:component-scan base-package="com.qcloud.project.djfx.web.handler.impl"></pirates:component-scan>
