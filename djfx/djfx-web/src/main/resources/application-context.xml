	<pirates:timer-scan base-package="com.qcloud.project.djfx.web.timer"></pirates:timer-scan>
	
	<pirates:uriHandler class="com.qcloud.project.djfx.web.handler.url.OrderUriHandlerImpl"></pirates:uriHandler>
	<pirates:uriHandler class="com.qcloud.project.djfx.web.handler.url.ProductCategoryUriHandlerImpl"></pirates:uriHandler>
